<body>
	<center>
		<div class="jumbotron">
			<h1>Computation Professors</h1>
		</div>
		{{#each professors}}
			<div class="professor" id="{{id}}">
				<a href="#" class="thumbnail">
					<img src="{{imageURL}}" class="img-responsive"></img>
					<h3>{{name}}</h3>
				</a>
				<div class='professor-description' visibility: hidden>
					<p><a href="{{website}}" class="btn btn-primary" target="_blank">Website</a></p>
					<p>Get to know this professor through a <a href="/computationgrads">grad student</a>.</p>
				</div>
			</div>
		{{/each}}
	</center>

	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/professor.js"></script>
