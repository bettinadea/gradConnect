<!doctype html>

<html>
<head>
	<title>Grad Connect</title>
	<link rel="stylesheet" href="css/bootstrap-theme.css" />
	<link rel="stylesheet" href="css/bootstrap.css" />
	<link rel="stylesheet" href="css/grads.css" />
	<meta name="viewport" content="user-scalable = yes">
</head>

<body>
	<div class="dropdown">
		<a class="btn btn-success dropdown-toggle" data-toggle="dropdown" href="#">Menu<b class="caret"></b></a>
		<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
			<li><a href="/">Home</a></li>
			<li><a href="clinicalcognitionchoice">Linguistics</a></li>
			<li><a href="computationchoice">Computation</a></li>
			<li><a href="humancognitionchoice">Human Cognition</a></li>
			<li><a href="hcichoice">HCI</a></li>
			<li><a href="neurosciencechoice">Neuroscience</a></li>
			<li><a href="discussion">Discussion</a></li>
		</ul>
	</div>
	<center>
		<div class="jumbotron">
			<h1>Human Cognition Graduates</h1>
		</div>
		{{#each graduates}}
			<div class="graduate" id="{{id}}">
				<a href="#" class="thumbnail">
					<img src="{{imageURL}}" class="img-responsive"></img>
					<h3>{{name}}</h3>
				</a>
				<div class='graduate-description' visibility: hidden>
					<p>{{description}}</p>
					<p>Times Free: Mon - 8am to 10am</p>
					<!--<iframe src="https://www.google.com/calendar/embed?height=600&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=gradconnectucsd%40gmail.com&amp;color=%232952A3&amp;ctz=America%2FLos_Angeles" style=" border-width:0 " width="800" height="600" frameborder="0" scrolling="no"></iframe>-->
					<a href="https://www.google.com/calendar/render?cid=gradconnectucsd%40gmail.com#h" class="btn btn-primary" target="_blank">Calendar</a></br>
					<a href="https://plus.google.com/hangouts/_/g2xdfibfkbqa3r6vpxgvl3zgpia?authuser=0&hl=en%5C" class="btn btn-primary" target="_blank">Hangout when {{name}} is free!</a>
					<a href="http://whenisgood.net/Create" class="btn btn-primary" target="_blank">Create a schedule!</a>
				</div>
			</div>
		{{/each}}
	</center>

	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/graduate.js"></script>
</body>
</html>